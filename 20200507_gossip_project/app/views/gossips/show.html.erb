<div class="container">
  <div class="form-group text-left py-4 px-5 border rounded bg-white">
  <h1><%= @gossip.title.capitalize %></h1>
    <p>By <%= @gossip.user.first_name %>, in <%= @gossip.user.city.name %> <em><%= time_ago_in_words(@gossip.updated_at) %> ago</em></h3>
    <p><%= @gossip.content  %></p>
    <%= link_to "Edit", edit_gossip_path(@gossip), class: "btn btn-secondary" %>
    <%= link_to "Delete", gossip_path(@gossip), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
</div>
